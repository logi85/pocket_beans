<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="header"
            type="de.seriousdonkey.pocketbeans.schedule.ui.list.ScheduleHeader" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/schedule_rv_header_background"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="64dp"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/schedule_rv_header_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="@{header.formattedDay()}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingTop="4dp"/>

        <TextView
            android:id="@+id/schedule_rv_header_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/schedule_rv_header_day"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingBottom="4dp"
            android:text="@{header.formattedDate}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
